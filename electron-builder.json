{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.WakaTime.WakaTime",
  "asar": true,
  "publish": "never",
  "productName": "WakaTime",
  "directories": {
    "output": "release/${version}"
  },
  "files": ["dist", "dist-electron", "public"],
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64", "universal"]
      }
    ],
    "artifactName": "${productName}-Mac-${arch}.${ext}",
    "icon": "./public/app-icon.icns",
    "category": "public.app-category.developer-tools"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "arm64"]
      }
    ],
    "artifactName": "${productName}-Windows-${arch}.${ext}",
    "icon": "./public/app-icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64", "arm64"]
      }
    ],
    "artifactName": "${productName}-Linux-${arch}.${ext}"
  }
}
